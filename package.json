{
    "scripts": {
        "build": "cds build/all --clean",
        "schema": "cds compile srv --to sql > srv/src/main/resources/schema.sql",
        "deploy": "cds deploy"
    },
    "devDependencies": {
        "@sap/cds": "latest"
    },
    "cds": {
        "build": {
            "target": "."
        },
        "requires": {
            "db": {
                "kind": "sqlite",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "sqlite.db"
                }
            }
        },
        "odata": {
            "version": "v4"
        }
    }
}
